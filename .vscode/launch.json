{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      // "pythonPath": "${workspaceFolder}/.venv/bin/python"
    },
    {
      "name": "Python Debugger: main.py with config",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "args": [
        "--config",
        "${workspaceFolder}/config/settings.yaml"
      ]
    },
    {
      "name": "Python Debugger: main.py with manual flight options (long options)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "args": [
        "--approach",
        "10",
        "--buffer",
        "6",
        "--output",
        "${workspaceFolder}/test/output",
        "--csv",
        "${workspaceFolder}/test/input/waypointVLF022tenpt.csv"
      ]
    },
    {
      "name": "Python Debugger: main.py with manual flight options (short options)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "args": [
        "-a",
        "10",
        "-b",
        "6",
        "-o",
        "${workspaceFolder}/test/output",
        "-c",
        "${workspaceFolder}/test/input/waypointVLF022onept.csv"
      ]
    }
  ]
}